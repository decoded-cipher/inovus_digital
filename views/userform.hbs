
<div class="container h-screen d-flex justify-content-center align-items-center">
    <div style="width: inherit;"
        <div class="row inner-container">
            <div class="col-lg-6 user-form-div">

                <div class="input-form">
                    <form action="/users" method="post" enctype="multipart/form-data">
                        <div class="form-image-display">
                            <img src="/images/avatar3.png" alt="Image" id="img-preview" class="border">
                        </div>
                        
                        <div class="form-group form-grp-div">
                            <label>Name</label>
                            <input type="text" placeholder="Enter your name" class="form-control" id="name" name="name" required>
                        </div>

                        <div class="form-group form-grp-div">
                            <label>Email</label>
                            <input type="email" placeholder="Enter your email" class="form-control" name="email" required>
                        </div>

                        <div class="form-group form-grp-div">
                            <label>Program/Domain</label>
                            <input type="text" placeholder="Enter a program" class="form-control" name="program" required>
                        </div>

                        <div class="form-group form-grp-div">
                            <label>Purpose of visit</label>
                            <select class="form-control" name="role">
                                <option>Learning</option>
                                <option>Building a Project</option>
                                <option>Explore</option>
                                <option>Mentor</option>
                            </select>
                        </div>

                        <div class="btn-div">
                            <a class="btn cancel-btn" href="/users">Cancel</a>
                            <button type="submit" class="btn submit-btn">Submit</button>
                        </div>
                    </form>
                </div>

            </div>
        </div>
    </div>
</div>

<script>
    
    let nameTag = document.getElementById('name')
    let imagePreview = document.getElementById('img-preview')

    nameTag.addEventListener("change", ()=>{

        let userName = document.getElementById('name').value
        let imgAPI = 'https://api.dicebear.com/7.x/initials/svg?seed='+userName
        imagePreview.setAttribute('src', imgAPI)
    })

</script>